<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.conference.seeMyEventsActivity">


    <TextView
            android:text="HERE ARE my EVENTS"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/welcome"/>


    <EditText
            android:id="@+id/eventMessage"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:hint="enter an event ID"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="text"
    />

    <EditText
            android:id="@+id/messageContent"
            android:layout_below="@+id/eventMessage"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter Message Content"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="text"
    />
    <Button
            android:text="Message all attendees"
            android:layout_width="wrap_content"
            android:layout_below="@+id/messageContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/messageAll"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_below="@+id/messageAll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/back"/>


</RelativeLayout>