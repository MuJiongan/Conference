<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.conference.OrganizerReschedule">



    <EditText
            android:id="@+id/startTime"
            android:layout_below="@+id/eventName"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter your start time here"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="text"/>


     <EditText
            android:id="@+id/endTime"
            android:layout_below="@+id/startTime"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter your end time here"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"

    />
    <EditText
            android:id="@+id/roomID"
            android:layout_below="@+id/endTime"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter your room ID here"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"

    /> <EditText
        android:id="@+id/capacity"
        android:layout_below="@+id/roomID"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your event capacity here"
        android:paddingLeft="8dp"
        android:layout_height="50dp"
        android:background="@drawable/textinputborder"

/>
    <Button
            android:text="ReSchedule event"
            android:layout_width="wrap_content"
            android:layout_below="@+id/capacity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/reschedule"/>


    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_below="@+id/reschedule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/back"/>

</RelativeLayout>