<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.conference.SignUp">


    <TextView
            android:text="This is your History:"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/history"/>
    <EditText
            android:id="@+id/messageContent"
            android:layout_below="@+id/history"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:hint="Message Content"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="text"/>


    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_below="@+id/messageContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/send"/>


    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_below="@+id/send"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/back"/>




</RelativeLayout>